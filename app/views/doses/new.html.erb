<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%=cl_image_path 'banner_6_eg2qm3', width: 3700, height: 2400, crop: :fill %>');">
  <div class="container">
    <h1>Add a new dosis for <%=@cocktail.name%></h1>
  </div>
</div>
<div class="container" style="margin-top: 30px">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, label_method: :name, value_method: :id, include_blank: false%>
    <%= f.input :description %>
    <%= f.submit "add dosis", class: "btn btn-orange" %>
  <% end %>
</div>

