<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="fas fa-cocktail logo"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search">
        <button class="btn-gray" type="submit">Search</button>
      </form>

      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "all cocktails", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "mix new cocktails", new_user_cocktail_path(current_user.id), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "my cocktails", my_cocktails_user_cocktails_path(current_user.id), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "logout", destroy_user_session_path, method: :delete, class: "nav-link", id: "logout" %>
        </li>
        <li class="nav-item dropdown">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "cocktails", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "login", user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
