<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%=cl_image_path 'banner_1_sl1col.jpg', width: 1400, height: 1000, crop: :fill %>');">
  <div class="container">
    <h1>Cocktailicioso</h1>
    <p>The world's best cocktails.</p>
    <%=link_to "Mix it baby!", new_cocktail_path, class: "btn-orange"%>

  </div>
</div>

<div class="container mt-4">
  <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a cocktail"
    %>
    <%= submit_tag "Search", class: "btn-gray" %>
  <% end %>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" data-aos="fade-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 1200, width: 1200, crop: :fill %>');">
        <%=link_to cocktail.name, cocktail_path(cocktail)%>
      </div>
    <% end %>
  </div>
</div>
