<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%=cl_image_path 'banner_1_sl1col.jpg', width: 1400, height: 1000, crop: :fill %>');">
  <div class="container">
    <h1>Hi <%=current_user.username %></h1>
  </div>
</div>

<div class="container mt-4">
  <h3 class="mb-4"> Manage your cocktails: </h3>
  <div class="cards">
    <% current_user.cocktails.each do |cocktail| %>
      <div class="card-cocktails" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 1200, width: 1200, crop: :fill %>');">
        <%=link_to cocktail.name, cocktail_path(cocktail)%>
        <%=link_to cocktail_path(cocktail) do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
