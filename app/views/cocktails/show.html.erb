<div class="banner">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<ul>
  <% @cocktail.doses.each do |d| %>
  <li>
    <%= d.description %> <%= d.ingredient.name %>
    <%= link_to "Delete", dose_path(d),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
<div>
<%= link_to "Add Doses", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost" %>
<%= link_to "Back", root_path, class: "btn btn-ghost" %>
</div>

